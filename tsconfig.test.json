{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowJs": true,
    "types": [ "node", "vitest/globals" ],
    "verbatimModuleSyntax": false,
    "erasableSyntaxOnly": false,
    "sourceMap": true,
    "paths": {
      "@renderer/*": [
        "src/renderer/src/*"
      ],
      "@common/*": [
        "src/common/*"
      ],
    }
  },
  "include": [ "src/types/" ]
}
