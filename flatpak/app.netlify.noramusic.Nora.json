{
  "app-id": "app.netlify.noramusic.Nora",
  "runtime": "org.freedesktop.Platform",
  "runtime-version": "24.08",
  "sdk": "org.freedesktop.Sdk",
  "base": "org.electronjs.Electron2.BaseApp",
  "base-version": "24.08",
  "sdk-extensions": [
    "org.freedesktop.Sdk.Extension.node22"
  ],
  "command": "run.sh",
  "separate-locales": false,
  "finish-args": [
    "--share=ipc",
    "--share=network",
    "--device=dri",
    "--socket=fallback-x11",
    "--socket=wayland",
    "--socket=pulseaudio",
    "--filesystem=xdg-music"
  ],
  "build-options": {
    "append-path": "/usr/lib/sdk/node22/bin",
    "env": {
      "NPM_CONFIG_LOGLEVEL": "info"
    }
  },
  "modules": [
    {
      "name": "Nora",
      "buildsystem": "simple",
      "build-options": {
        "env": {
          "XDG_CACHE_HOME": "/run/build/Nora/flatpak-node/cache",
          "npm_config_cache": "/run/build/Nora/flatpak-node/npm-cache",
          "npm_config_offline": "true"
        }
      },
      "build-commands": [
        "npm install --offline",
        "npm run build:flatpak",
        "cp -a dist/linux*unpacked /app/main",
        "install -Dm755 -t /app/bin/ run.sh",
        "install -Dm644 resources/logo_light_mode.png /app/share/icons/hicolor/scalable/apps/app.netlify.noramusic.Nora.png",
        "install -Dm644 flatpak/app.netlify.noramusic.Nora.desktop /app/share/applications/app.netlify.noramusic.Nora.desktop",
        "install -Dm644 flatpak/app.netlify.noramusic.Nora.metainfo.xml /app/share/metainfo/app.netlify.noramusic.Nora.appdata.xml"
      ],
      "sources": [
        {
          "type": "dir",
          "path": ".."
        },
        "generated-sources.json",
        {
          "type": "script",
          "dest-filename": "run.sh",
          "commands": [
            "zypak-wrapper.sh /app/main/Nora --ozone-platform-hint=auto \"$@\""
          ]
        }
      ]
    }
  ]
}